<% include ../partials/header %>

<div class="container">
<div class="row">
  <div class="col-12 text-center">
    <h1>Spreads Page</h1>
  </div>
</div>
<div class="row">
  <div class="col-12">
    <form class="form-group" action="/spreads" method="POST">
      <input class="form-control" name="newSpread[name]" type="text" placeholder="spread name">
      <input class="form-control" name="newSpread[num]" type="number" placeholder="number of cards">
      <input class="form-control" name="newSpread[imgUrl]" type="url" placeholder="image url">
      <textarea class="form-control" name="newSpread[notes]" type="text" placeholder="notes" rows="10"></textarea>
      <button class="btn">Submit</button>
    </form>
  </div>
</div>
</div>
<% include ../partials/footer %>